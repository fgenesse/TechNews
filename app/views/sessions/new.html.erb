<div id="connexion">
	<h1>Connexion</h1>
	<%= form_tag do %>
		<div class="field" id="nom">
			<%= label_tag :nom_utilisateur, 'Nom' %>
			<br>
			<%= text_field_tag :nom_utilisateur, params[:nom_utilisateur] %>
		</div>
		<div class="field" id="password">
			<%= label_tag :password, 'Mot de passe' %>
			<br>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div id="login">
			<%= submit_tag "Login" %>
		</div>
	<% end %>
</div>