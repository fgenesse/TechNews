<%= form_for(@utilisateur) do |f| %>
  <% if @utilisateur.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@utilisateur.errors.count, "error") %> prohibited this utilisateur from being saved:</h2>

      <ul>
      <% @utilisateur.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom_utilisateur %><br>
    <%= f.text_field :nom_utilisateur %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :adresse_courriel %><br>
    <%= f.text_field :adresse_courriel %>
  </div>
  <% if session[:utilisateur_id] and session[:est_auteur] %>
    <div class="field">
      <%= f.label :est_auteur %><br>
      <%= f.check_box :est_auteur %>
    </div>
  <% else %>
    <div class="field">
      <%= hidden_field_tag(:est_auteur, "f") %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :signature %><br>
    <%= f.text_field :signature %>
  </div>
  <div class="actions">
    <%= f.submit value: button_name %>
  </div>
<% end %>
