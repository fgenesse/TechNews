<p id="notice"><%= notice %></p>

<h1>Listing Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Nom utilisateur</th>
      <th>Adresse courriel</th>
      <th>Est auteur</th>
      <th>Signature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utilisateurs.each do |utilisateur| %>
      <tr>
        <td><%= utilisateur.nom_utilisateur %></td>
        <td><%= utilisateur.adresse_courriel %></td>
        <td><%= utilisateur.est_auteur %></td>
        <td><%= utilisateur.signature %></td>
        <td><%= link_to 'Show', utilisateur %></td>
        <td><%= link_to 'Edit', edit_utilisateur_path(utilisateur) %></td>
        <td><%= link_to 'Destroy', utilisateur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

