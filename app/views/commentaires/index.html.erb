<p id="notice"><%= notice %></p>

<h1>Listing Commentaires</h1>

<table>
  <thead>
    <tr>
      <th>Texte commentaire</th>
      <th>Date commentaire</th>
      <th>Article</th>
      <th>Utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commentaires.each do |commentaire| %>
      <tr>
        <td><%= commentaire.texte_commentaire %></td>
        <td><%= commentaire.date_commentaire %></td>
        <td><%= commentaire.article %></td>
        <td><%= commentaire.utilisateur %></td>
        <td><%= link_to 'Show', commentaire %></td>
        <td><%= link_to 'Edit', edit_commentaire_path(commentaire) %></td>
        <td><%= link_to 'Destroy', commentaire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

